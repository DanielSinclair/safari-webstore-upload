{
  "name": "@plasmo-corp/swu",
  "version": "0.0.0",
  "description": "Safari Webstore Upload",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "start": "node ./dist/index.js --dry-run",
    "dev": "tsup --watch --sourcemap inline",
    "snapshot": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot",
    "build": "tsup --dts-resolve",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "clean": "rimraf dist",
    "bundler-update": "cd template/ruby && bundle update && rimraf vendor",
    "prepublishOnly": "run-s clean build test"
  },
  "author": "Plasmo Corp. <support@plasmo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmo-corp/qtt.git"
  },
  "license": "MIT",
  "keywords": [
    "safari",
    "apple",
    "webstore",
    "upload",
    "add-ons",
    "extensions"
  ],
  "devDependencies": {
    "@jest/globals": "28.1.0",
    "@plasmo-corp/rps": "1.2.1",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "17.0.32",
    "cross-env": "7.0.3",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.2",
    "tsup": "5.12.7",
    "typescript": "4.6.4"
  },
  "dependencies": {
    "consola": "2.15.3",
    "fs-extra": "10.1.0",
    "plist": "3.0.5",
    "tmp": "0.2.1",
    "unzipper": "0.10.11",
    "xml": "1.0.1"
  }
}
